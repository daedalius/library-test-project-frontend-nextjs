{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": ["DOM", "ES2021"],
    "paths": {
      "#api/*": ["api/*"],
      "#components/*": ["components/*"],
      "#entities": ["entities"],
      "#entities/*": ["entities/*"],
      "#utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
